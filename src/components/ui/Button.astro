---
export interface Props {
    url: string;
    target?: string;
    className?: string;
    secondary?: boolean;
    title?: string;
}
const defaultText = "Button";
const {
    url,
    target = "_self",
    className,
    secondary = false,
    title
} = Astro.props as Props;
---

{
    secondary ? (
        <a
            href={url}
            target={target}
            class={["btn-secondary group", className].filter(Boolean).join(" ")}
            title={title}
        >
            <slot>{defaultText}</slot>
        </a>
    ) : (
        <a
            href={url}
            target={target}
            class={["btn-primary group", className].filter(Boolean).join(" ")}
            title={title}
        >
            <slot>{defaultText}</slot>
        </a>
    )
}
