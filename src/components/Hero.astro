---
// Component
import Button from "../components/ui/Button.astro";

// Heo Image
import heroImg from "public/images/optimized/hero2-min.webp";
---

<!-- Full-width breakout wrapper -->
<div
    class="relative w-screen left-1/2 right-1/2 -ml-[50vw] -mr-[50vw] overflow-hidden"
>
    <!-- Centered content as before -->
    <section class="max-w-8xl mx-auto px-6 lg:px-12">
        <section
            class="flex flex-col-reverse items-center lg:flex-row gap-y-6 relative"
        >
            <div class="w-full space-y-6 lg:w-1/2 lg:my-auto">
                <h2
                    class="text-gold-300 text-center lg:leading-[5rem] lg:text-start font-cinzel golden-text heroTitle opacity-0"
                >
                    <span
                        class="text-nowrap"
                        style="font-size: clamp(1.5rem, 4vw, 3.2rem);"
                    >
                        Yet the story of
                    </span>
                    <span
                        class="tracking-wide font-bold text-nowrap block leading-none"
                        style="font-size: clamp(3.5rem, 8vw, 5.6rem); white-space: nowrap;"
                    >
                        Orpheus
                    </span>
                </h2>
                <p
                    class="mx-auto text-center lg:text-start lg:w-auto text-[calc(100%_+_0.25vw)] leading-relaxed tracking-widest font-light heroTxt opacity-0"
                >
                    UX/UI Designer, with experience in delivering end-to-end
                    design for software products, WebApps, Audio Apps & Plugins
                    ...
                </p>
                <div
                    class="flex gap-6 flex-wrap heroTxt justify-center md:justify-normal"
                >
                    <Button
                        url="#"
                        className="sm:w-auto heroBtn py-3 px-8 text-lg opacity-0 text-zircon-200/80"
                        secondary
                    >
                        Works
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="ml-1 w-5 motion-safe:group-hover:animate-pulse"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z"
                            ></path>
                        </svg>
                    </Button>
                    <Button
                        url="#"
                        className="sm:w-auto heroBtn py-3 px-8 text-lg opacity-0"
                    >
                        Free Stuff
                    </Button>
                </div>
            </div>
            <!-- Hero Image: Remove extra right offsets so GSAP controls its position -->
            <div
                class="pointer-events-none select-none relative heroImg right-6"
            >
                <img
                    src={heroImg.src}
                    width="1286"
                    height="1052"
                    alt="Orpheus Hero"
                    class="opacity-0 heroImg"
                />
            </div>
        </section>
    </section>
</div>
